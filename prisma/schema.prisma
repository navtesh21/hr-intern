generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_DATABASE_URL")
}

model Employee {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  department  String
  joiningDate DateTime
  leaveBalance Int     @default(20) // Default 20 days annual leave
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  leaveRequests LeaveRequest[]
  
  @@map("employees")
}

model LeaveRequest {
  id          String      @id @default(cuid())
  employeeId  String
  startDate   DateTime
  endDate     DateTime
  reason      String
  status      LeaveStatus @default(PENDING)
  appliedAt   DateTime    @default(now())
  reviewedAt  DateTime?
  reviewedBy  String?     // Employee ID of reviewer (HR/Manager)
  comments    String?     // Comments from reviewer
  
  // Relations
  employee    Employee    @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  @@map("leave_requests")
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}
